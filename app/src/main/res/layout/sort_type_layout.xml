<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sort_radio_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_white"
    >
    <RadioButton
        android:id="@+id/zonghe"
        android:button="@null"
        android:text="综合排序"
        android:drawableRight="@drawable/sort_checkbox_button"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#353535"
        android:padding="10dp"
        android:checked="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/header_title_line" />
    <RadioButton
        android:id="@+id/price_desc"
        android:button="@null"
        android:text="价格从高到低"
        android:drawableRight="@drawable/sort_checkbox_button"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#353535"
        android:padding="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/header_title_line" />
    <RadioButton
        android:id="@+id/price_asc"
        android:button="@null"
        android:text="价格从低到高"
        android:drawableRight="@drawable/sort_checkbox_button"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#353535"
        android:padding="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/header_title_line" />
    <RadioButton
        android:id="@+id/sale_num"
        android:button="@null"
        android:text="销售量"
        android:drawableRight="@drawable/sort_checkbox_button"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#353535"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/header_title_line" />
</RadioGroup>