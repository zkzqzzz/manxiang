<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browse_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_header_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/menu"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/wg_title_txt"
            android:text="@string/title_browse"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/title_txt_size"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/right_btn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/header_layout_padding"
            android:src="@mipmap/msg_icon"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>


    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/header_title_line" />
</LinearLayout>
