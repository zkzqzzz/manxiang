<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/wg_item_distance_180"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/wg_function_unit_state"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_special_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/wg_item_distance_160"
            android:layout_height="@dimen/wg_item_distance_160"
            android:layout_marginTop="@dimen/wg_item_distance_9"
            android:scaleType="fitXY"
            android:src="@mipmap/default_ico_service" />

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/wg_item_distance_160"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wg_item_distance_9"
            android:maxLines="2"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_13" />

        <LinearLayout
            android:layout_width="@dimen/wg_item_distance_160"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wg_item_distance_14"
            android:layout_marginTop="@dimen/wg_item_distance_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_red"
                android:textSize="@dimen/wg_font_17" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wg_item_distance_9"
                android:textColor="@color/Wg_font_3_gray"
                android:textSize="@dimen/wg_font_17" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>