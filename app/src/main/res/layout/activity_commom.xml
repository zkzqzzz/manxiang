<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include  android:id="@+id/header_layout" layout="@layout/wg_mine_header_4" />

    <ImageView style="@style/mine_setting_item_iv_ae" />

   <!-- <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wg_item_distance_45"
        app:tabIndicatorColor="#d50f25" />-->
    <RadioGroup
        android:id="@+id/tabLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/all_tab"
            android:text="全部"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/zhao_radio_txt_size_2"
            android:background="@drawable/search_radiobutton_bg"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/wait_pay_tab"
            android:text="待付款"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/zhao_radio_txt_size_2"
            android:background="@drawable/search_radiobutton_bg"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/wait_paint_tab"
            android:text="待作画"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/zhao_radio_txt_size_2"
            android:background="@drawable/search_radiobutton_bg"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/wait_recive_tab"
            android:text="待收画"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/zhao_radio_txt_size_2"
            android:background="@drawable/search_radiobutton_bg"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/wait_comment_tab"
            android:text="待评价"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/zhao_radio_txt_size_2"
            android:background="@drawable/search_radiobutton_bg"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
