<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wg_function_unit_state"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/service_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/service_name"
            android:textColor="@color/common_one_rank_font"
            android:textSize="14sp"
            android:lines="2"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/service_price"
            android:layout_below="@+id/service_name"
            android:textColor="#d20414"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_centerVertical="true"
            android:id="@+id/painter_header"
            android:src="@mipmap/def_header"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            app:riv_corner_radius="100dp"
            />
        <TextView
            android:id="@+id/painter_name"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/painter_header"
            android:layout_marginLeft="5dp"
            android:textColor="@color/common_desc_font"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>

</LinearLayout>