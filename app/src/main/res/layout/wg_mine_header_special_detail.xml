<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browse_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_header_height"
        android:background="@color/bg_white"
        android:gravity="center_vertical">


        <ImageButton
            android:id="@+id/wg_header_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="@dimen/header_layout_padding"
            android:scaleType="fitCenter"
            android:src="@mipmap/wg_header_back" />

        <TextView
            android:id="@+id/wg_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="漫像"
            android:textColor="@color/common_one_rank_font"
            android:textSize="@dimen/wg_font_17" />


        <!--<ImageButton
            android:id="@+id/wg_right_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="center"
            android:src="@mipmap/wg_more" />-->
        <ImageButton
            android:id="@+id/wg_right_btn"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/header_layout_padding"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/wg_more" />

        <ImageButton
            android:id="@+id/wg_special_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/wg_right_btn"
            android:background="@color/transparent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/wg_special_header_one" />

    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/header_title_line" />
</LinearLayout>