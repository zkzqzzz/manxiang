<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    >

    <ScrollView
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/scrollView"
        android:layout_below="@+id/seckill_details_header"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/service_img"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </ImageView>

            <TextView
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="2"
                android:textColor="@color/common_one_rank_font"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/service_grief"
                android:layout_toRightOf="@+id/img_layout"
                android:layout_below="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:lines="1"
                android:textColor="@color/common_desc_font"
                android:textSize="14sp"
                />
            <RelativeLayout android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                >
                <TextView
                    android:text="￥: 0.00"
                    android:id="@+id/service_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_buy"
                    android:textSize="17sp"
                    />
                <TextView
                    android:text="原价:"
                    android:textColor="@color/common_desc_font"
                    android:textSize="14sp"
                    android:id="@+id/market_price_title"
                    android:layout_below="@+id/service_price"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="￥0.00"
                    android:textColor="@color/common_desc_font"
                    android:textSize="14sp"
                    android:id="@+id/market_price"
                    android:layout_below="@+id/service_price"
                    android:layout_toRightOf="@+id/market_price_title"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="20dp" />
                <TextView
                    android:text="还剩0个"
                    android:id="@+id/service_num"
                    android:layout_below="@+id/service_price"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/common_buy"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/seckill_details_bottom"
                android:layout_width="match_parent"
                android:background="@color/bg_white"
                android:layout_height="60dp">
                <View
                    android:id="@+id/seckill_details_line"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/header_title_line" />
                <Button
                    android:id="@+id/seckill_btn"
                    android:layout_centerInParent="true"
                    android:text="立即抢购"
                    android:textSize="15sp"
                    android:textColor="@color/font_white"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_button_bg"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/warm_btn"
                    android:layout_centerInParent="true"
                    android:text="提醒"
                    android:textSize="15sp"
                    android:textColor="@color/font_white"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_button_blue_bg"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/warmed_btn"
                    android:layout_centerInParent="true"
                    android:text="已提醒"
                    android:textSize="15sp"
                    android:textColor="@color/seckill_blue"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_button_blue_border_bg"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/buy_btn"
                    android:layout_centerInParent="true"
                    android:text="原价购买"
                    android:textSize="15sp"
                    android:textColor="@color/font_red"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_red_border_button"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
