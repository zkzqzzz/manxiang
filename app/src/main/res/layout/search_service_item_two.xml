<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wg_function_unit_state"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_special_detail"
        android:layout_width="@dimen/wg_item_distance_180"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginRight="@dimen/wg_item_distance_18"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="@dimen/wg_item_distance_140"
            android:layout_height="@dimen/wg_item_distance_140"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/wg_item_distance_6"
            android:layout_marginTop="@dimen/wg_item_distance_6"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/wg_item_distance_6"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18"
            android:lines="2"
            android:gravity="bottom"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wg_item_distance_14"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18">

            <TextView
                android:id="@+id/service_price"
                style="@style/mine_setting_item_tv"
                android:textColor="#d20414"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>