<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/header_layout"
        layout="@layout/wg_mine_header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_setting_mine_about_icon"
            android:layout_width="70dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/wg_item_distance_25"
            android:scaleType="fitCenter"
            android:src="@mipmap/wg_mine_about_icon" />

        <TextView
            android:id="@+id/tv_setting_mine_about_version"
            style="@style/mine_setting_item_tv"
            android:layout_marginTop="@dimen/wg_item_distance_14"
            android:text="@string/versionCode"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wg_header_liner"
            style="@style/mine_setting_item_iv_ae" />

        <RelativeLayout
            android:id="@+id/rl_setting_mine_about_help"
            style="@style/mine_setting_item_rl">

            <TextView
                android:id="@+id/tv_setting_mine_about_help"
                style="@style/mine_setting_item_tv"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginTop="@dimen/wg_item_distance_14"
                android:text="帮助中心" />

            <ImageView
                android:id="@+id/iv_setting_mine_about_help"
                style="@style/mine_setting_item_ib"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_right_more" />

        </RelativeLayout>

        <ImageView
            style="@style/mine_setting_item_iv_ae"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18" />

        <RelativeLayout
            android:id="@+id/rl_setting_mine_about_protocol"
            style="@style/mine_setting_item_rl">

            <TextView
                android:id="@+id/tv_setting_mine_about_protocol"
                style="@style/mine_setting_item_tv"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginTop="@dimen/wg_item_distance_14"
                android:text="用户协议" />

            <ImageView
                android:id="@+id/iv_setting_mine_about_protocol"
                style="@style/mine_setting_item_ib"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_right_more" />

        </RelativeLayout>

        <ImageView
            style="@style/mine_setting_item_iv_ae"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18" />

        <RelativeLayout
            android:id="@+id/rl_setting_mine_about_copyright"
            style="@style/mine_setting_item_rl">

            <TextView
                android:id="@+id/tv_setting_mine_about_copyright"
                style="@style/mine_setting_item_tv"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginTop="@dimen/wg_item_distance_14"
                android:text="版权信息" />
            <TextView
                style="@style/mine_setting_item_tv"
                android:layout_alignParentLeft="false"
                android:layout_marginRight="@dimen/wg_item_distance_9"
                android:layout_toLeftOf="@+id/iv_setting_mine_about_copyright"
                android:text="中版集团数字传媒有限公司" />
            <ImageView
                android:id="@+id/iv_setting_mine_about_copyright"
                style="@style/mine_setting_item_ib"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_right_more" />

        </RelativeLayout>

        <ImageView
            style="@style/mine_setting_item_iv_ae"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18" />

        <RelativeLayout
            android:id="@+id/rl_setting_mine_about_check"
            style="@style/mine_setting_item_rl">

            <TextView
                android:id="@+id/tv_setting_mine_about_check"
                style="@style/mine_setting_item_tv"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginTop="@dimen/wg_item_distance_14"
                android:text="版本检测" />

            <ImageView
                android:id="@+id/iv_data_mine_nick_name"
                style="@style/mine_setting_item_ib"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_right_more" />

            <TextView
                android:id="@+id/tv_setting_mine_about_check_updated"
                style="@style/mine_setting_item_tv"
                android:layout_alignParentLeft="false"
                android:layout_marginRight="@dimen/wg_item_distance_9"
                android:layout_toLeftOf="@id/iv_data_mine_nick_name"
                android:text="当前已是最新版" />

            <ImageButton
                android:visibility="gone"
                android:id="@+id/ib_setting_mine_about_updating"
                style="@style/mine_setting_item_ib"
                android:layout_width="@dimen/wg_item_distance_36"
                android:layout_height="@dimen/wg_item_distance_14"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="@dimen/wg_item_distance_9"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@id/tv_setting_mine_about_check_updated"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_mine_about_update" />

        </RelativeLayout>

        <ImageView style="@style/mine_setting_item_iv_ae" />

        <Button
            android:id="@+id/bt_setting_mine_about_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wg_item_distance_36"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/wg_item_distance_14"
            android:layout_marginTop="@dimen/wg_item_distance_14"
            android:background="@drawable/wg_drawable_evaluate_solid_bg"
            android:paddingLeft="@dimen/wg_item_distance_45"
            android:paddingRight="@dimen/wg_item_distance_45"
            android:text="给个好评吧"
            android:textColor="@color/font_white"
            android:textSize="@dimen/wg_font_15" />

    </LinearLayout>

</LinearLayout>