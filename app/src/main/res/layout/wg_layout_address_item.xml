<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wg_function_unit_state"
        android:paddingBottom="@dimen/wg_item_distance_14"
        android:paddingLeft="@dimen/wg_item_distance_18"
        android:paddingRight="@dimen/wg_item_distance_18"
        android:paddingTop="@dimen/wg_item_distance_14">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="18055457848"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="@dimen/wg_item_distance_9"
            android:text="安徽省合肥市蜀山区经开区九龙路111号安徽大学某某某收货"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_14" />

    </RelativeLayout>

    <ImageView
        style="@style/mine_setting_item_iv_ae"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginRight="@dimen/wg_item_distance_18" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/wg_item_distance_18">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:drawableLeft="@drawable/wg_radio_button_sex_bg"
            android:drawablePadding="@dimen/wg_item_distance_9"
            android:paddingBottom="@dimen/wg_item_distance_14"
            android:paddingTop="@dimen/wg_item_distance_14"
            android:text="默认地址"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_14" />


        <TextView
            android:id="@+id/delete_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/checkBox"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/wg_function_unit_state"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/wg_item_distance_14"
            android:paddingRight="@dimen/wg_item_distance_14"
            android:text="删除"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/edit_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/checkBox"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/delete_address"
            android:background="@drawable/wg_function_unit_state"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/wg_item_distance_14"
            android:paddingRight="@dimen/wg_item_distance_14"
            android:text="编辑"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

    </RelativeLayout>

    <include
        android:id="@+id/combine_liner"
        layout="@layout/wg_combine_liner" />

</LinearLayout>