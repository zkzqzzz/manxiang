<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="18dp"
        android:paddingTop="25dp"
        android:text="您确定要删除该地址吗？"
        android:textColor="@color/wg_font_1_black"
        android:textSize="@dimen/wg_font_15" />

    <ImageView style="@style/mine_setting_item_iv_ae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/wg_item_distance_14">

        <Button
            android:id="@+id/cancel"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/wg_item_distance_14"
            android:layout_weight="1"
            android:background="@drawable/wg_drawable_exchange_dialog_white_bg"
            android:text="取消"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

        <Button
            android:id="@+id/ok"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/wg_item_distance_14"
            android:layout_weight="1"
            android:background="@drawable/wg_drawable_evaluate_solid_bg"
            android:text="确定"
            android:textColor="@color/font_white"
            android:textSize="@dimen/wg_font_15" />

    </LinearLayout>

</LinearLayout>