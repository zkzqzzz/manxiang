<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wg_function_unit_state"
        android:padding="@dimen/wg_item_distance_18">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子图片下载"
                android:textColor="@color/wg_font_2_description"
                android:textSize="@dimen/wg_font_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wg_item_distance_9"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_download_image_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="@dimen/wg_item_distance_9"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_download_image_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="@dimen/wg_item_distance_9"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_download_image_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="@dimen/wg_item_distance_9"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wg_item_distance_9"
                android:text="画家留言："
                android:textColor="@color/wg_font_2_description"
                android:textSize="@dimen/wg_font_14" />

            <TextView
                android:id="@+id/painter_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="希望您喜欢。"
                android:textColor="@color/wg_font_2_description"
                android:textSize="@dimen/wg_font_14" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>