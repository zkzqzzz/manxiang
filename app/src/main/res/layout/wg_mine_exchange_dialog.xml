<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:background="@drawable/wg_drawable_exchange_dialog_bg">

    <TextView
        android:id="@+id/tv_personal_exchanging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="即将兑换"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv_personal_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_personal_exchanging"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/default_ico_service" />

    <TextView
        android:id="@+id/tv_personal_exchanging_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_personal_exchange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:maxWidth="150dp"
        android:minWidth="100dp"
        android:text="描述描述描述描述描述描述描述描述描" />

    <TextView
        android:id="@+id/tv_personal_exchanging_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_personal_exchanging_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="$ 99.99"
        android:textColor="@color/font_red"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_personal_exchanging_price"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_personal_exchanging_liner"
            style="@style/mine_setting_item_iv_ae"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_personal_exchanging_liner"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_personal_exchanging_cancel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/wg_drawable_exchange_dialog_white_bg"
                android:text="取消"
                android:textSize="17sp" />

            <Button
                android:id="@+id/bt_personal_exchanging_ok"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/wg_drawable_exchange_ok_bg"
                android:text="确认兑换"
                android:textColor="@color/font_white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>