<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_refund_item_liner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/wg_gay_liner_border" />

    <RelativeLayout
        android:id="@+id/painter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wg_item_distance_9"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginRight="@dimen/wg_item_distance_18"
        android:layout_marginTop="@dimen/wg_item_distance_14"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/painter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/refund_artist_pic" />

        <TextView
            android:id="@+id/painter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wg_item_distance_9"
            android:layout_toRightOf="@id/painter_img"
            android:text="爱因斯坦" />

        <ImageButton
            style="@style/mine_setting_item_ib"
            android:src="@mipmap/wg_right_more" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_refund_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/service_img"
                android:layout_width="@dimen/wg_item_distance_120"
                android:layout_height="@dimen/wg_item_distance_120"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:src="@mipmap/special002" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wg_item_distance_120"
            android:layout_marginLeft="@dimen/wg_item_distance_9"
            android:layout_marginRight="@dimen/wg_item_distance_18"
            android:layout_toRightOf="@id/ll_refund_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="标题标题标题标题标题标题标题标题标题标题"
                android:textColor="@color/wg_font_1_black"
                android:textSize="@dimen/wg_font_15" />

            <TextView
                android:id="@+id/service_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="方式：手工绘图；提供：电子简图"
                android:textColor="@color/bg_gray"
                android:textSize="@dimen/wg_font_13" />

            <TextView
                android:id="@+id/service_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="状态：已付款待作画"
                android:textColor="@color/bg_red"
                android:textSize="@dimen/wg_font_13" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/wg_gay_liner_border" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/wg_item_distance_18">

        <TextView

            android:id="@+id/tv_refund_fum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wg_item_distance_9"
            android:text="合计:"
            android:textSize="@dimen/wg_font_17" />

        <TextView
            android:id="@+id/service_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_refund_fum"
            android:text="￥：399.00"
            android:textColor="@color/wg_buy_orange"
            android:textSize="@dimen/wg_font_17" />

        <TextView
            android:id="@+id/service_postage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/service_total_money"
            android:layout_below="@id/service_total_money"
            android:layout_marginBottom="@dimen/wg_item_distance_14"
            android:layout_marginTop="@dimen/wg_item_distance_6"
            android:text="(含运费￥0.00元)"
            android:textColor="@color/bg_gray"
            android:textSize="@dimen/wg_font_12" />

    </RelativeLayout>
</LinearLayout>