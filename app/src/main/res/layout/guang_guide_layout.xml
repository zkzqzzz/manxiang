<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_gudie"
    >

    <ImageView
        android:id="@+id/guide_0"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/paizhao_icon"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/guide_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="9dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/guide_circle"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/guide_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="45dp"
        android:src="@mipmap/guide_row"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/guide_3"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/guide_desc"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/guide_4"
        android:layout_width="86dp"
        android:layout_height="35dp"
        android:layout_below="@+id/guide_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/guide_know"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        />
</RelativeLayout>
