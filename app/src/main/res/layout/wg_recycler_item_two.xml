<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/wg_function_unit_state"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_special_detail"
        android:layout_width="@dimen/wg_item_distance_180"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginRight="@dimen/wg_item_distance_18"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_special_detail_image"
            android:layout_width="@dimen/wg_item_distance_140"
            android:layout_height="@dimen/wg_item_distance_140"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/wg_item_distance_6"
            android:layout_marginTop="@dimen/wg_item_distance_6"
            android:scaleType="fitXY"
           />

        <TextView
            android:id="@+id/tv_special_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/wg_item_distance_6"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18"
            android:lines="2"
            android:gravity="bottom"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wg_item_distance_14"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18">

            <TextView
                android:id="@+id/tv_special_detail_price"
                style="@style/mine_setting_item_tv"
                android:textColor="@color/wg_buy_orange"
                android:textSize="@dimen/wg_font_15" />

            <TextView
                android:id="@+id/tv_special_detail_numbers"
                style="@style/mine_setting_item_tv"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:textColor="@color/Wg_font_3_gray"
                android:textSize="@dimen/wg_font_15" />

            <ImageView
                android:id="@+id/iv_special_detail_star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/wg_item_distance_6"
                android:layout_toLeftOf="@id/tv_special_detail_numbers"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_special_detail_star_has" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>