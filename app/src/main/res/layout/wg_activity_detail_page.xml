<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/wg_header_collection" />

    <ImageView style="@style/mine_setting_item_iv_ae" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_special_detail_image"
                android:layout_width="@dimen/wg_item_distance_250"
                android:layout_height="@dimen/wg_item_distance_250"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/wg_item_distance_6"
                android:layout_marginTop="@dimen/wg_item_distance_6"
                android:scaleType="fitXY"
                android:src="@mipmap/special002" />

            <TextView
                android:id="@+id/tv_special_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/wg_item_distance_6"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:layout_marginRight="@dimen/wg_item_distance_18"
                android:maxLines="2"
                android:text="我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容我是内容"
                android:textColor="@color/wg_font_1_black"
                android:textSize="@dimen/wg_font_15" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_special_detail_current_cost"
                    style="@style/mine_setting_item_tv"
                    android:text="@string/tv_image_price"
                    android:textColor="@color/wg_buy_orange"
                    android:textSize="@dimen/wg_font_20" />

                <Button
                    android:id="@+id/bt_miaosha_activity"
                    android:layout_width="@dimen/wg_item_distance_80"
                    android:layout_height="@dimen/wg_item_distance_20"
                    android:layout_marginLeft="@dimen/wg_item_distance_18"
                    android:background="@drawable/wg_miaosha_bg_btn"
                    android:text="秒杀活动"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/wg_font_13" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_special_detail_original_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:text="原价：￥ 999.00"
                android:textSize="@dimen/wg_font_15" />

            <TextView
                android:id="@+id/tv_special_detail_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:layout_marginTop="@dimen/wg_item_distance_9"
                android:text="优惠：满100减10元"
                android:textColor="@color/wg_toolbar_red"
                android:textSize="@dimen/wg_font_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:layout_marginRight="@dimen/wg_item_distance_18"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/wg_item_distance_9"
                android:paddingTop="@dimen/wg_item_distance_9">

                <TextView
                    android:id="@+id/tv_special_detail_delivery_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快递：90.00元"
                    android:textSize="@dimen/wg_font_15" />

                <TextView
                    android:id="@+id/tv_special_detail_sales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="销量：250件"
                    android:textSize="@dimen/wg_font_15" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_special_detail_star"
                        android:layout_width="@dimen/wg_item_distance_13"
                        android:layout_height="@dimen/wg_item_distance_13"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/wg_item_distance_6"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/wg_special_detail_star_has" />

                    <TextView
                        android:id="@+id/tv_special_detail_numbers"
                        style="@style/mine_setting_item_tv"
                        android:layout_gravity="center_vertical"
                        android:text="1234"
                        android:textColor="@color/Wg_font_3_gray"
                        android:textSize="@dimen/wg_font_15" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_special_detail_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginLeft="@dimen/wg_item_distance_18"
                android:text="创作周期：100天"
                android:textColor="@color/wg_font_1_black"
                android:textSize="@dimen/wg_font_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView style="@style/mine_setting_item_iv_e8" />

                <ImageView
                    style="@style/mine_setting_item_iv_f3"
                    android:layout_height="@dimen/wg_item_distance_6" />

                <ImageView style="@style/mine_setting_item_iv_e8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_special_detail_seller_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wg_function_unit_state"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/wg_item_distance_14"
                android:paddingLeft="@dimen/wg_item_distance_18"
                android:paddingRight="@dimen/wg_item_distance_18"
                android:paddingTop="@dimen/wg_item_distance_9">

                <ImageView
                    android:id="@+id/iv_special_detail_seller_icon"
                    android:layout_width="@dimen/wg_item_distance_45"
                    android:layout_height="@dimen/wg_item_distance_45"
                    android:src="@mipmap/my_form_header_icon" />

                <TextView
                    android:id="@+id/iv_special_detail_seller_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wg_item_distance_9"
                    android:layout_weight="1"
                    android:text="商家昵称"
                    android:textColor="@color/wg_font_1_black"
                    android:textSize="@dimen/wg_font_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wg_right_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView style="@style/mine_setting_item_iv_e8" />

                <ImageView
                    style="@style/mine_setting_item_iv_f3"
                    android:layout_height="@dimen/wg_item_distance_6" />

                <ImageView style="@style/mine_setting_item_iv_e8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_special_detail_select_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wg_function_unit_state"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/wg_item_distance_14"
                android:paddingLeft="@dimen/wg_item_distance_18"
                android:paddingRight="@dimen/wg_item_distance_18"
                android:paddingTop="@dimen/wg_item_distance_14">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择方式"
                    android:textColor="@color/wg_font_1_black"
                    android:textSize="@dimen/wg_font_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_white"
                    android:src="@mipmap/wg_right_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView style="@style/mine_setting_item_iv_e8" />

                <ImageView
                    style="@style/mine_setting_item_iv_f3"
                    android:layout_height="@dimen/wg_item_distance_6" />

                <ImageView style="@style/mine_setting_item_iv_e8" />

            </LinearLayout>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/wg_item_distance_200"
                android:layout_marginTop="@dimen/wg_item_distance_200"
                android:gravity="center_horizontal"
                android:text="待实现"
                android:textColor="@color/wg_buy_orange"
                android:textSize="@dimen/wg_font_35" />-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="400dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabIndicatorColor="#d50f25">
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tabLayout">
            </android.support.v4.view.ViewPager>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView style="@style/mine_setting_item_iv_e8" />

                <ImageView
                    style="@style/mine_setting_item_iv_f3"
                    android:layout_height="@dimen/wg_item_distance_6" />

                <ImageView style="@style/mine_setting_item_iv_e8" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/wg_item_distance_9"
                android:paddingTop="@dimen/wg_item_distance_9"
                android:text="更多精选商品"
                android:textColor="@color/wg_font_2_description"
                android:textSize="@dimen/wg_font_15" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_special_detail_selected_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_special_detail_entry_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/wg_item_distance_14"
                android:paddingTop="@dimen/wg_item_distance_14"
                android:text="进TA的画室看看"
                android:textColor="@color/wg_font_2_description"
                android:textSize="@dimen/wg_font_15" />

        </LinearLayout>

    </ScrollView>

    <ImageView style="@style/mine_setting_item_iv_ae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wg_item_distance_9"
        android:layout_marginTop="@dimen/wg_item_distance_6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_special_detail_entry_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/wg_item_distance_6"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/wg_item_distance_14"
                android:paddingTop="@dimen/wg_item_distance_14"
                android:text="进入店铺"
                android:textColor="@color/font_red"
                android:textSize="@dimen/wg_font_17" />

            <TextView
                android:id="@+id/tv_special_detail_click_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/wg_item_distance_14"
                android:paddingTop="@dimen/wg_item_distance_14"
                android:text="收藏"
                android:textColor="@color/wg_font_1_black"
                android:textSize="@dimen/wg_font_17" />

        </LinearLayout>

        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/bt_special_buy_now"
            android:layout_width="0dp"
            android:layout_height="@dimen/wg_item_distance_36"
            android:layout_marginLeft="@dimen/wg_item_distance_6"
            android:layout_marginRight="@dimen/wg_item_distance_18"
            android:layout_weight="1"
            android:background="@drawable/wg_drawable_exchange_ok_bg"
            android:text="立即购买"
            android:textColor="@color/font_white"
            android:textSize="@dimen/wg_font_17" />

    </LinearLayout>

</LinearLayout>