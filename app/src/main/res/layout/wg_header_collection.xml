<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browse_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_header_height"
    android:background="@color/bg_white"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/wg_header_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/wg_item_distance_9"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@mipmap/wg_header_back" />

    <TextView
        android:id="@+id/wg_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="通用头"
        android:textColor="@color/wg_font_1_black"
        android:textSize="@dimen/wg_font_17" />

    <ImageButton
        android:id="@+id/wg_right_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/wg_item_distance_9"
        android:background="@color/transparent"
        android:scaleType="center"
        android:src="@mipmap/wg_more" />

    <ImageButton
        android:id="@+id/wg_collect_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/wg_right_btn"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@mipmap/tabbar_home"
         />

</RelativeLayout>
<View
android:id="@+id/bottom_line"
android:layout_width="match_parent"
android:layout_height="1px"
android:layout_alignParentBottom="true"
android:background="@color/header_title_line" />
</LinearLayout>