<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:paddingLeft="@dimen/wg_item_distance_10"
    android:paddingRight="@dimen/wg_item_distance_10"
    android:paddingTop="@dimen/wg_item_distance_10">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/wg_font_2_description"
        android:textSize="@dimen/wg_font_12" />

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wg_item_distance_5"
        android:text=""
        android:textColor="@color/wg_font_1_black"
        android:textSize="@dimen/wg_font_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wg_item_distance_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/wg_item_distance_100"
            android:layout_height="@dimen/wg_item_distance_100"
            android:scaleType="fitXY"
            android:src="@mipmap/default_ico_service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wg_item_distance_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/wg_font_1_black"
                android:textSize="@dimen/wg_font_14" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wg_item_distance_5"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/wg_font_2_description"
                android:textSize="@dimen/wg_font_13" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/wg_item_distance_10"
        android:paddingTop="@dimen/wg_item_distance_5">

        <TextView
            android:id="@+id/detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/wg_button_green"
            android:textSize="@dimen/wg_font_15" />

        <ImageView
            android:layout_width="@dimen/wg_item_distance_14"
            android:layout_height="@dimen/wg_item_distance_14"
            android:layout_marginLeft="@dimen/wg_item_distance_6"
            android:background="@color/transparent"
            android:src="@mipmap/wg_right_more" />

    </LinearLayout>

    <ImageView style="@style/mine_setting_item_iv_ae" />

</LinearLayout>