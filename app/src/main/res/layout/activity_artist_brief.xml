<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/wg_mine_header"/>

    <ImageView style="@style/mine_setting_item_iv_ae"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wg_function_unit_state"
                android:padding="@dimen/wg_item_distance_18">

                <ImageView
                    android:id="@+id/imv_painter_icon"
                    style="@style/mine_setting_item_ib"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="false"
                    android:src="@mipmap/my_form_header_icon"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imv_painter_icon"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/painter_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/wg_item_distance_9"
                                android:text="画家昵称"
                                android:textColor="@color/wg_font_1_black"
                                android:textSize="@dimen/wg_font_15"/>

                            <TextView
                                android:id="@+id/tv_painter_specialty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/wg_item_distance_9"
                                android:layout_toRightOf="@id/painter_name"
                                android:text="（特长：肖像漫画）"
                                android:textColor="@color/wg_font_1_black"
                                android:textSize="@dimen/wg_font_15"/>
                        </LinearLayout>

                        <RatingBar
                            android:id="@+id/starBar"
                            style="@style/wg_Self_RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_below="@id/painter_name"
                            android:layout_marginTop="@dimen/wg_item_distance_9"
                            android:layout_marginLeft="@dimen/wg_item_distance_9"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize="1"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_painter_hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wg_item_distance_9"
                        android:layout_marginLeft="@dimen/wg_item_distance_9"
                        android:text=""
                        android:textColor="@color/wg_font_1_black"
                        android:textSize="@dimen/wg_font_15"/>

                </LinearLayout>


                <Button
                    android:id="@+id/bt_collect"
                    android:layout_width="@dimen/wg_item_distance_100"
                    android:layout_height="@dimen/wg_item_distance_36"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/wg_item_distance_9"
                    android:background="@drawable/wg_drawable_evaluate_solid_bg"
                    android:text="收藏"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/wg_font_17"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView style="@style/mine_setting_item_iv_e8"/>

                <ImageView
                    style="@style/mine_setting_item_iv_f3"
                    android:layout_height="@dimen/wg_item_distance_6"/>

                <ImageView style="@style/mine_setting_item_iv_e8"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/wg_item_distance_18">

                <TextView
                    android:id="@+id/service_postage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="画量：293幅"
                    android:textColor="@color/wg_font_1_black"
                    android:textSize="@dimen/wg_font_15"/>

                <TextView
                    android:id="@+id/service_postage"
                    style="@style/mine_setting_item_tv"
                    android:layout_below="@id/service_postage_name"
                    android:layout_marginTop="@dimen/wg_item_distance_9"
                    android:text="开始时间：2016-04-09 12：11：37"
                    android:textColor="@color/wg_font_1_black"
                    android:textSize="@dimen/wg_font_15"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView style="@style/mine_setting_item_iv_e8"/>

                <ImageView
                    style="@style/mine_setting_item_iv_f3"
                    android:layout_height="@dimen/wg_item_distance_6"/>

                <ImageView style="@style/mine_setting_item_iv_e8"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/wg_item_distance_18">

                <TextView
                    android:id="@+id/tv_studio_brief_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="画室简介："
                    android:textColor="@color/wg_font_1_black"
                    android:textSize="@dimen/wg_font_15"
                    />

                <TextView
                    android:id="@+id/tv_studio_brief_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_studio_brief_title"
                    android:layout_marginTop="@dimen/wg_item_distance_9"
                    android:text=""
                    android:textColor="@color/wg_font_1_black"
                    android:textSize="@dimen/wg_font_15"
                    />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>