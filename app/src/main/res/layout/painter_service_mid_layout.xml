<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mid_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.demo.zk.manxiang.ui.BannerSlideShowView
        android:id="@+id/slide_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/wg_item_distance_9">

    </com.demo.zk.manxiang.ui.BannerSlideShowView>

    <TextView
        android:id="@+id/tv_special_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/wg_item_distance_5"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginRight="@dimen/wg_item_distance_18"
        android:singleLine="true"
        android:textColor="@color/wg_font_1_black"
        android:textSize="@dimen/wg_font_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="￥ "
            android:textColor="@color/wg_buy_orange"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/tv_special_detail_current_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/wg_buy_orange"
            android:textSize="@dimen/wg_font_20" />

        <TextView
            android:id="@+id/miaos_show"
            android:visibility="gone"
            android:text="秒杀活动"
            android:background="@drawable/miaos_text_bg"
            android:textColor="@color/font_white"
            android:textSize="@dimen/wg_font_13"
            android:layout_marginLeft="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价："
            android:textColor="@color/wg_font_2_description"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/tv_special_detail_original_cost_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 0.00"
            android:textColor="@color/wg_font_2_description"
            android:textSize="@dimen/wg_font_15" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_special_detail_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginTop="@dimen/wg_item_distance_5"
        android:text="优惠：满100减10元"
        android:textColor="@color/wg_toolbar_red"
        android:textSize="@dimen/wg_font_15"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:layout_marginRight="@dimen/wg_item_distance_18"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/wg_item_distance_10"
        android:paddingTop="@dimen/wg_item_distance_5">

        <TextView
            android:id="@+id/tv_special_detail_delivery_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="快递：0.00元"
            android:textColor="@color/wg_font_2_description"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/tv_special_detail_sales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="销量：0件"
            android:textColor="@color/wg_font_2_description"
            android:textSize="@dimen/wg_font_15" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_special_detail_star"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/wg_item_distance_6"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_specail_detail_star_no" />

            <TextView
                android:id="@+id/service_numbers"
                style="@style/mine_setting_item_tv"
                android:layout_gravity="center_vertical"
                android:text="0"
                android:textColor="@color/Wg_font_3_gray"
                android:textSize="@dimen/wg_font_15" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_special_detail_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wg_item_distance_14"
        android:layout_marginLeft="@dimen/wg_item_distance_18"
        android:text="创作周期：0天"
        android:textColor="@color/wg_font_1_black"
        android:textSize="@dimen/wg_font_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView style="@style/mine_setting_item_iv_e8" />

        <ImageView
            style="@style/mine_setting_item_iv_f3"
            android:layout_height="@dimen/wg_item_distance_6" />

        <ImageView style="@style/mine_setting_item_iv_e8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_special_detail_seller_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/wg_function_unit_state"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/wg_item_distance_18"
        android:paddingRight="@dimen/wg_item_distance_18">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_special_detail_seller_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@mipmap/def_header"
            app:riv_corner_radius="100dp" />

        <TextView
            android:id="@+id/iv_special_detail_seller_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wg_item_distance_9"
            android:layout_weight="1"
            android:text="商家昵称"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

        <ImageView
            android:layout_width="@dimen/wg_item_distance_14"
            android:layout_height="@dimen/wg_item_distance_14"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/wg_right_more" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView style="@style/mine_setting_item_iv_e8" />

        <ImageView
            style="@style/mine_setting_item_iv_f3"
            android:layout_height="@dimen/wg_item_distance_6" />

        <ImageView style="@style/mine_setting_item_iv_e8" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_special_detail_select_way"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/wg_function_unit_state"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/wg_item_distance_18"
        android:paddingRight="@dimen/wg_item_distance_18">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="选择方式"
            android:textColor="@color/wg_font_1_black"
            android:textSize="@dimen/wg_font_15" />

        <TextView
            android:id="@+id/selected_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/wg_font_2_description"
            android:textSize="@dimen/wg_font_15" />

        <ImageView
            android:layout_width="@dimen/wg_item_distance_14"
            android:layout_height="@dimen/wg_item_distance_14"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/wg_right_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/mine_setting_item_iv_f3"
            android:layout_height="@dimen/wg_item_distance_6" />

        <ImageView style="@style/mine_setting_item_iv_e8" />

    </LinearLayout>
</LinearLayout>