<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <include
        android:id="@+id/wg_header"
        layout="@layout/wg_mine_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wg_header"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_account_mine_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wg_function_unit_state"
            android:paddingLeft="@dimen/wg_item_distance_18"
            android:paddingRight="@dimen/wg_item_distance_18">

            <TextView
                style="@style/mine_setting_item_tv"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginTop="@dimen/wg_item_distance_14"
                android:text="修改手机号码" />

            <ImageView
                android:id="@+id/iv_account_mine_number"
                style="@style/mine_setting_item_ib"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_right_more" />

            <TextView
                android:id="@+id/tv_account_mine_number"
                style="@style/mine_setting_item_tv"
                android:layout_alignParentLeft="false"
                android:layout_marginRight="@dimen/wg_item_distance_9"
                android:layout_toLeftOf="@id/iv_account_mine_number"
                android:text="138****8888"
                android:textColor="@color/wg_font_2_description" />


        </RelativeLayout>

        <ImageView
            style="@style/mine_setting_item_iv_ae"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18" />

        <RelativeLayout
            android:id="@+id/rl_account_mine_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wg_function_unit_state"
            android:paddingLeft="@dimen/wg_item_distance_18"
            android:paddingRight="@dimen/wg_item_distance_18">

            <TextView
                style="@style/mine_setting_item_tv"
                android:layout_marginBottom="@dimen/wg_item_distance_14"
                android:layout_marginTop="@dimen/wg_item_distance_14"
                android:text="修改密码" />

            <ImageView
                android:id="@+id/iv_account_mine_password"
                style="@style/mine_setting_item_ib"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@mipmap/wg_right_more" />


        </RelativeLayout>

        <ImageView
            style="@style/mine_setting_item_iv_ae"
            android:layout_marginLeft="@dimen/wg_item_distance_18"
            android:layout_marginRight="@dimen/wg_item_distance_18" />

    </LinearLayout>

</RelativeLayout>